@model VideoRentDemoApp.Models.Movie

@{
	ViewData["Title"] = "Details";
}

<div>
	<h4>Details of Movie</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			<img src="~/img/@Html.DisplayFor(modelItem => modelItem.ImageUrl)" class="card-img" />
		</dt>
		<dd class="col-sm-10">
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Title)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Title)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Description)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Description)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Length)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Length) min.
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.DateRelease)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.DateRelease)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Genre)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Genre)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.MainActress)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.MainActress)
		</dd>
	</dl>
</div>
<div>
	<a asp-action="Update" asp-route-id="@Model.MovieId" class="btn btn-success">Edit</a> |
	<a asp-action="Index" class="btn btn-success">Back to List</a> |
	<a asp-action="Delete" asp-route-id="@Model.MovieId" class="btn btn-danger">Delete</a>
</div>
