<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Video Rental</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
	<header>
		<div class="navbar navbar-expand-sm bg-primary navbar-dark">
			<div class="container">
				<a href="/" class="navbar-brand">Video Rent Application</a>
				<ul class="navbar-nav flex-grow-1">
					<li class="nav-item">
						<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
					</li>
					<li class="nav-item">
						<a class="nav-link text-dark" asp-area="" asp-controller="RentedMovie" asp-action="Index">Rented Movies</a>
					</li>
					<li class="nav-item">
						<a class="nav-link text-dark" asp-area="" asp-controller="Renter" asp-action="Index">Renters</a>
					</li>
				</ul>

				<ul class="navbar-nav">
					<li class="nav-item">
						@using (Html.BeginForm())
						{
							<div>
								Find by name:
								@Html.TextBox("SearchString")
								@*<input type="submit" value="GO!" />*@
							</div>
						}
					</li>
				</ul>

				<ul class="navbar-nav">
					<li class="nav-item">
						<a class="nav-link" asp-area="" asp-controller="" asp-action="">Login</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-area="" asp-controller="" asp-action="">Register</a>
					</li>
				</ul>
			</div>
		</div>
	</header>
	<main>
		<div class="container mt-4">
			@RenderBody()
		</div>
	</main>

	<footer class="border-top footer text-muted">
		<div class="container" style="color:red">
			&copy; 2022 - Video Rent Application - <a asp-area="" asp-controller="Home" asp-action="Index">Main Menu</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@RenderSection("Scripts", required: false)
</body>
</html>
