@model IEnumerable<VideoRentDemoApp.Models.Renter>

@{
    ViewData["Title"] = "Index";
}

<h1>Renters' List</h1>
<p>
    <a asp-action="Create">Create New Renter</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RenterId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RenterId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RenterId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
